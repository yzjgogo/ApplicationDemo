<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_no_back_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="没有backpressure的情况" />

    <Button
        android:id="@+id/bt_back_pressure_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="背压策略：响应式拉取" />

    <Button
        android:id="@+id/bt_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="流速控制操作符：过滤sample" />
    <Button
        android:id="@+id/bt_buffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="流速控制操作符：缓存buffer" />
    <Button
        android:id="@+id/bt_buffer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="onBackpressurebuffer，onBackpressureDrop" />
</LinearLayout>